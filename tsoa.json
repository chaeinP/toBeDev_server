{
  "basePath": "/",
  "entryFile": "./src/app.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["./src/controllers/**/*Controller.ts"],
  "spec": {
    "specVersion": 3,
    "contact": {
      "email": "pca0046@gmail.com",
      "name": "박채인"
    },
    "host": "localhost:8080",
    "outputDirectory": "./src",
    "schemes": ["http"]
  },
  "routes": {
    "routesDir": "./src/routes",
    "middleware": "express",
    "iocModule": "./src/ioc/iocContainer",
    "noWriteIfUnchanged": true
  },
  "compilerOptions": {
    "paths": {
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@service/*": ["./src/service/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@dto/*": ["./src/dto/*"],
      "@common/*": ["./src/common/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@ioc/*": ["./src/ioc/*"],
      "@entities/*": ["./src/entities/*"],
      "@types/*": ["./src/@types/*"]
    }
  },
  "ignore": ["**/node_modules/**", "./src/__test__/**"]
}
